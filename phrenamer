#!/bin/sh
# See LICENSE file for copyright and license details.

usage() {
	echo 'usage: phrenamer [-d] [dir]' >&2
	exit 1
}

while getopts :d opt; do
	case "$opt" in
	d)	dry='t' ;;
	?)	usage ;;
	esac
done

shift $((OPTIND - 1))
dir="${1:-$(pwd)}"

files=$(find "$dir" -regextype posix-extended -regex '.*\.(jpg|JPG|jpeg)' \
        | sort)
! [ "$files" ] && exit 1

digits=$(echo "$files" | wc -l | wc -c)
zeroes=$((digits - 1)) # minus '\0'

IFS="
"
count=0
for fname in $files; do
	count=$((count + 1))
	newname=$(printf %s/%0${zeroes}d.jpg "${fname%/*}" "$count")
	echo "$fname -> $newname"
	! [ -f "$newname" ] && [ -z "$dry" ] && mv "$fname" "$newname"
done

